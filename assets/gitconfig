# vim: ft=gitconfig

[user]
  name = Guillermo Guirao Aguilar
  email = contact@guillermoguiraoaguilar.com
[core]
  editor = vim
  excludesfile = ~/.gitignore_global
[mergetool]
  path = nvim
  trustExitCode = true
[merge]
  tool = vimdiff
[mergetool "vimdiff"]
  path = nvim
[diff]
  tool = vimdiff
[difftool]
  prompt = false
  trustExitCode = true
[alias]
  lg = !"git log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(bold yellow)%d%C(reset)"
  up = pull --rebase --prune --autostash
  back = checkout -
[push]
  default = current
[color]
	ui = true
