#!/bin/sh

available pip3 || install python3-pip || install python-pip
pip3 install --user --upgrade IPython
if [ -f ~/.zshrc ]
then
  if mac
  then
    sed -i '' '2i\
export VIRTUAL_ENV_DISABLE_PROMPT=1\
export PYTHONBREAKPOINT="ipdb.set_trace"
' ~/.zshrc
    sed -i '' "s/export PATH=/export PATH=\/Users\/$USER\/Library\/Python\/3.8\/bin:/" ~/.zshrc
  else
    sed -i '2i export VIRTUAL_ENV_DISABLE_PROMPT=1' ~/.zshrc
    sed -i '2i \\nexport PYTHONBREAKPOINT="ipdb.set_trace"' ~/.zshrc
  fi
fi
get assets/flake8 ~/.config/flake8
