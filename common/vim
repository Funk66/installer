#!/bin/sh

setup git fonts python

install neovim
# TODO: if gpg key present, clone git@github
[ -d ~/.config/nvim ] || git clone --depth=1 https://github.com/Funk66/vim.git ~/.config/nvim
git clone --depth 1 https://github.com/wbthomason/packer.nvim ~/.local/share/nvim/site/pack/packer/start/packer.nvim

if [ -f /usr/bin/vim ]
then
  if [ ! -f ~/.local/bin/vim ]
  then
    mkdir -p ~/.local/bin
    ln -s "$(command -v nvim)" ~/.local/bin/vim
  fi
else
  sudo ln -s "$(command -v nvim)" /usr/bin/vim
fi

pip3 install --upgrade --user flake8 mypy black jedi pynvim msgpack isort
available npm && sudo npm i -g eslint stylelint neovim
nvim +PackerSync

if [ -f ~/.zshrc ]
then
  sed "s/EDITOR='vi'/EDITOR='nvim'/" ~/.zshrc
fi
