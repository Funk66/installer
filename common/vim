#!/bin/sh

setup git fonts python node rust

install neovim curl

bash <(curl -s https://raw.githubusercontent.com/lunarvim/lunarvim/master/utils/installer/install.sh) -y

if [ -f ~/.zshrc ]
then
  sed "s/EDITOR='vi'/EDITOR='lvim'/" ~/.zshrc
  echo "alias vim=lvim" >> ~/.config/zsh/aliases.zsh
  . ~/.config/zsh/aliases.zsh
fi

mkdir -p ~/.config/lvim/
get assets/lvim.lua ~/.config/lvim/config.lua

"~/.local/bin/lvim" --headless -c 'autocmd User PackerComplete quitall' -c 'PackerSync'
